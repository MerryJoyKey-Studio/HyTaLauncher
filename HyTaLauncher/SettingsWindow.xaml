<Window x:Class="HyTaLauncher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ¸"
        Height="560" Width="580"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource BackgroundGradient}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#0Affffff"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="âš™ ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ¸" 
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="18,0,0,0"/>
                    <Button Content="âœ•" 
                            Style="{StaticResource CloseButton}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="24,16,24,8">
                <StackPanel>
                    
                    <!-- Game Directory -->
                    <TextBlock x:Name="GameDirLabel"
                               Text="GAME FOLDER"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="GameDirTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True"
                                 FontSize="12"
                                 Padding="12,10"/>
                        <Button Grid.Column="1"
                                Content="..."
                                Width="44"
                                Margin="10,0,0,0"
                                Style="{StaticResource ModernButton}"
                                FontSize="14"
                                Padding="0,10"
                                Click="BrowseButton_Click"/>
                    </Grid>

                    <!-- Mirror Setting -->
                    <TextBlock x:Name="MirrorLabel"
                               Text="DOWNLOAD MIRROR"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <CheckBox x:Name="UseMirrorCheckBox"
                              Foreground="{StaticResource TextBrush}"
                              FontSize="12"
                              Margin="0,0,0,6"
                              Checked="UseMirrorCheckBox_Changed"
                              Unchecked="UseMirrorCheckBox_Changed">
                        <TextBlock x:Name="UseMirrorText" 
                                   Text="Use mirror server"
                                   TextWrapping="Wrap"/>
                    </CheckBox>
                    <TextBlock x:Name="MirrorWarningText"
                               Text="Only use if official server doesn't work. Speed limited to ~2 MB/s"
                               FontSize="11"
                               Foreground="#ff9800"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"
                               Margin="24,0,0,16"/>

                    <!-- Russifier -->
                    <TextBlock x:Name="RussifierLabel"
                               Text="RUSSIFIER"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,4,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="RussifierBtn"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource CardBackgroundBrush}"
                                Padding="14,8"
                                FontSize="12"
                                Click="RussifierButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‡·ðŸ‡º" Margin="0,0,6,0"/>
                                <TextBlock x:Name="RussifierBtnText" Text="Install Russifier"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="RussifierRestoreBtn"
                                Style="{StaticResource ModernButton}"
                                Background="#3d2020"
                                Padding="10,8"
                                FontSize="12"
                                Margin="8,0,0,0"
                                Click="RussifierRestoreButton_Click"
                                ToolTip="Restore backup"
                                Visibility="Collapsed">
                            <TextBlock Text="â†©"/>
                        </Button>
                    </StackPanel>
                    <TextBlock x:Name="RussifierStatusText"
                               Text=""
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,6,0,16"/>

                    <!-- Online Fix -->
                    <TextBlock x:Name="OnlineFixLabel"
                               Text="ONLINE FIX"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="OnlineFixBtn"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource CardBackgroundBrush}"
                                Padding="14,8"
                                FontSize="12"
                                Click="OnlineFixButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŒ" Margin="0,0,6,0"/>
                                <TextBlock x:Name="OnlineFixBtnText" Text="Install Online Fix"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="OnlineFixRestoreBtn"
                                Style="{StaticResource ModernButton}"
                                Background="#3d2020"
                                Padding="10,8"
                                FontSize="12"
                                Margin="8,0,0,0"
                                Click="OnlineFixRestoreButton_Click"
                                ToolTip="Restore backup"
                                Visibility="Collapsed">
                            <TextBlock Text="â†©"/>
                        </Button>
                    </StackPanel>
                    <!-- <TextBlock x:Name="OnlineFixWarningText"
                               Text="May break some UI elements (missing textures)"
                               FontSize="11"
                               Foreground="#ff9800"
                               TextWrapping="Wrap"
                               Margin="0,6,0,0"/> -->
                    <TextBlock x:Name="OnlineFixStatusText"
                               Text=""
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,6,0,16"/>

                    <!-- Download Settings -->
                    <TextBlock x:Name="DownloadLabel"
                               Text="DOWNLOAD"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <CheckBox x:Name="AlwaysFullDownloadCheckBox"
                              Foreground="{StaticResource TextBrush}"
                              FontSize="12"
                              Margin="0,0,0,6"
                              IsChecked="True">
                        <TextBlock x:Name="AlwaysFullDownloadText" 
                                   Text="Always download full version"
                                   TextWrapping="Wrap"/>
                    </CheckBox>
                    <TextBlock x:Name="DownloadHintText"
                               Text="Recommended. Disabling may cause corrupted files when updating."
                               FontSize="11"
                               Foreground="#ff9800"
                               TextWrapping="Wrap"
                               Margin="24,0,0,16"/>

                    <!-- Font Settings -->
                    <TextBlock x:Name="FontLabel"
                               Text="FONT"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="FontComboBox"
                              Style="{StaticResource ModernComboBox}"
                              FontSize="12"
                              Padding="12,10"
                              Width="280"
                              MaxDropDownHeight="300"
                              HorizontalAlignment="Left"
                              SelectionChanged="FontComboBox_SelectionChanged"/>
                    <TextBlock x:Name="FontHintText"
                               Text="Requires restart to apply"
                            FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,6,0,16"/>   

                    <!-- Verbose Logging -->
                    <TextBlock x:Name="LoggingLabel"
                               Text="LOGGING"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <CheckBox x:Name="VerboseLoggingCheckBox"
                              Foreground="{StaticResource TextBrush}"
                              FontSize="12"
                              Margin="0,0,0,6">
                        <TextBlock x:Name="VerboseLoggingText" 
                                   Text="Enable verbose logging"
                                   TextWrapping="Wrap"/>
                    </CheckBox>
                    <TextBlock x:Name="LoggingHintText"
                               Text="Detailed logs help diagnose issues. Logs are saved to %AppData%\HyTaLauncher\logs"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="24,0,0,8"/>
                    <Button x:Name="OpenLogsBtn"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource CardBackgroundBrush}"
                            Padding="14,8"
                            FontSize="12"
                            Click="OpenLogsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" Margin="0,0,6,0"/>
                            <TextBlock x:Name="OpenLogsBtnText" Text="Open logs folder"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,20,0,16"/>

                    <!-- Advanced Settings -->
                    <TextBlock x:Name="AdvancedLabel"
                               Text="ADVANCED"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <Button x:Name="AdvancedBtn"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource CardBackgroundBrush}"
                            Padding="14,8"
                            FontSize="12"
                            Click="AdvancedButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”§" Margin="0,0,6,0"/>
                            <TextBlock x:Name="AdvancedBtnText" Text="Professional Mode"/>
                        </StackPanel>
                    </Button>
                    <TextBlock x:Name="AdvancedHintText"
                               Text="Custom launch arguments, open folders"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,6,0,8"/>

                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="24,0">
                <Button x:Name="CancelBtn"
                        Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource CardBackgroundBrush}"
                        Padding="20,10"
                        FontSize="12"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveBtn"
                        Content="Save"
                        Style="{StaticResource ModernButton}"
                        Padding="24,10"
                        FontSize="12"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
