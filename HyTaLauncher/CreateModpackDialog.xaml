<Window x:Class="HyTaLauncher.CreateModpackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Modpack"
        Height="500" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource BackgroundGradient}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#08ffffff"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“¦" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TitleText"
                                   Text="Create Modpack" 
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" 
                            Style="{StaticResource CloseButton}"
                            HorizontalAlignment="Right"
                            Click="CancelButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="20,15">
                <StackPanel>
                    <!-- Modpack Name -->
                    <TextBlock x:Name="NameLabel"
                               Text="Modpack Name"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="ModpackNameBox"
                             Style="{StaticResource ModernTextBox}"
                             Height="36"
                             FontSize="12"
                             MaxLength="50"/>
                    <TextBlock x:Name="NameErrorText"
                               Text=""
                               FontSize="10"
                               Foreground="#cc3333"
                               Margin="0,4,0,0"
                               Visibility="Collapsed"/>
                    
                    <!-- Select Mods Section -->
                    <TextBlock x:Name="SelectModsLabel"
                               Text="Select Mods to Include"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,20,0,6"/>
                    
                    <Border Background="#12ffffff"
                            CornerRadius="8"
                            Padding="8"
                            MaxHeight="250">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="ModsListBox">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#08ffffff"
                                                CornerRadius="6"
                                                Padding="10,8"
                                                Margin="0,0,0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <CheckBox Grid.Column="0"
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,10,0"/>
                                                
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Mod.DisplayName}"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock FontSize="9"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               Margin="0,2,0,0">
                                                        <Run Text="v"/>
                                                        <Run Text="{Binding Mod.DisplayVersion, Mode=OneWay}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Selection Summary -->
                    <TextBlock x:Name="SelectionSummary"
                               Text="0 mods selected"
                               FontSize="10"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2"
                    Background="#08ffffff"
                    CornerRadius="0,0,12,12"
                    Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelBtn"
                            Content="Cancel"
                            Style="{StaticResource ModernButton}"
                            Background="#3d444d"
                            Padding="20,10"
                            FontSize="12"
                            Click="CancelButton_Click"/>
                    <Button x:Name="CreateBtn"
                            Content="Create"
                            Style="{StaticResource ModernButton}"
                            Padding="20,10"
                            FontSize="12"
                            Margin="10,0,0,0"
                            Click="CreateButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
