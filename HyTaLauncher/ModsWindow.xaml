<Window x:Class="HyTaLauncher.ModsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mods"
        Height="650" Width="990"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundGradient}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#08ffffff"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ§©" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TitleText"
                                   Text="Mods Manager" 
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" 
                            Style="{StaticResource CloseButton}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Installed Mods -->
                <Border Grid.Column="0" 
                        Background="{StaticResource CardBackgroundBrush}"
                        CornerRadius="10"
                        Margin="0,0,8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Modpack Panel -->
                        <Border Grid.Row="0" 
                                Background="#10ffffff" 
                                CornerRadius="10,10,0,0"
                                Padding="10,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Modpack Label and Selector -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock x:Name="ModpackLabel"
                                               Grid.Column="0"
                                               Text="MODPACK"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                                    
                                    <ComboBox x:Name="ModpackSelector"
                                              Grid.Column="1"
                                              Style="{StaticResource ModernComboBox}"
                                              Height="26"
                                              Padding="8,4"
                                              FontSize="10"
                                              SelectionChanged="ModpackSelector_SelectionChanged">
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ModernComboBoxItem}">
                                                <Setter Property="Padding" Value="8,6"/>
                                                <Setter Property="FontSize" Value="10"/>
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                </Grid>
                                
                                <!-- Modpack Action Buttons -->
                                <StackPanel Grid.Row="1" 
                                            Orientation="Horizontal" 
                                            Margin="0,6,0,0"
                                            HorizontalAlignment="Left">
                                    <Button x:Name="CreateModpackBtn"
                                            Content="+"
                                            Width="26" Height="24"
                                            Style="{StaticResource ModernButton}"
                                            Padding="0"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            ToolTip="Create Modpack"
                                            Click="CreateModpack_Click"/>
                                    <Button x:Name="EditModpackBtn"
                                            Content="âœ"
                                            Width="26" Height="24"
                                            Margin="4,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Background="#3d444d"
                                            Padding="0"
                                            FontSize="10"
                                            ToolTip="Edit Modpack"
                                            IsEnabled="False"
                                            Click="EditModpack_Click"/>
                                    <Button x:Name="DeleteModpackBtn"
                                            Content="ðŸ—‘"
                                            Width="26" Height="24"
                                            Margin="4,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Background="#cc3333"
                                            Padding="0"
                                            FontSize="10"
                                            ToolTip="Delete Modpack"
                                            IsEnabled="False"
                                            Click="DeleteModpack_Click"/>
                                    <Border Width="1" Height="16" Background="#3d444d" Margin="8,0"/>
                                    <Button x:Name="ExportModpackBtn"
                                            Content="ðŸ“¤"
                                            Width="26" Height="24"
                                            Style="{StaticResource ModernButton}"
                                            Background="#3d444d"
                                            Padding="0"
                                            FontSize="10"
                                            ToolTip="Export Modpack"
                                            IsEnabled="False"
                                            Click="ExportModpack_Click"/>
                                    <Button x:Name="ImportModpackBtn"
                                            Content="ðŸ“¥"
                                            Width="26" Height="24"
                                            Margin="4,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Background="#3d444d"
                                            Padding="0"
                                            FontSize="10"
                                            ToolTip="Import Modpack"
                                            Click="ImportModpack_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Header -->
                        <Border Grid.Row="1" 
                                Background="#08ffffff" 
                                Padding="12,10">
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <CheckBox x:Name="SelectAllCheckBox"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0"
                                              Visibility="Collapsed"
                                              Checked="SelectAllCheckBox_Changed"
                                              Unchecked="SelectAllCheckBox_Changed"/>
                                    <TextBlock x:Name="InstalledTitle"
                                               Text="INSTALLED"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button x:Name="DeleteSelectedBtn"
                                            Content="ðŸ—‘"
                                            Width="26" Height="26"
                                            Style="{StaticResource ModernButton}"
                                            Background="#cc3333"
                                            Padding="0"
                                            FontSize="10"
                                            ToolTip="Delete Selected"
                                            Visibility="Collapsed"
                                            Click="DeleteSelected_Click"/>
                                    <Button x:Name="SelectModeBtn"
                                            Content="â˜‘"
                                            Width="26" Height="26"
                                            Margin="6,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Padding="0"
                                            FontSize="12"
                                            ToolTip="Select Mode"
                                            Click="SelectMode_Click"/>
                                    <Button Content="â¬†"
                                            Width="26" Height="26"
                                            Margin="6,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Padding="0"
                                            FontSize="12"
                                            ToolTip="Check Updates"
                                            Click="CheckUpdates_Click"/>
                                    <Button Content="â†»"
                                            Width="26" Height="26"
                                            Margin="6,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Padding="0"
                                            FontSize="12"
                                            Click="RefreshInstalled_Click"/>
                                    <Button Content="ðŸ“"
                                            Width="26" Height="26"
                                            Margin="6,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Padding="0"
                                            FontSize="10"
                                            Click="OpenFolder_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Tag Filter Panel -->
                        <Border x:Name="TagFilterPanel" 
                                Grid.Row="2"
                                Background="#08ffffff" 
                                Padding="8,6"
                                Visibility="Collapsed">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                          VerticalScrollBarVisibility="Disabled"
                                          Height="28">
                                <StackPanel Orientation="Horizontal">
                                    <!-- All Tags Button -->
                                    <Border x:Name="AllTagsChip"
                                            Background="{StaticResource AccentBrush}"
                                            CornerRadius="4"
                                            Padding="10,4"
                                            Margin="0,0,4,0"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="AllTagsChip_Click">
                                        <TextBlock x:Name="AllTagsText"
                                                   Text="All"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Dynamic Tag Chips -->
                                    <ItemsControl x:Name="TagFilterList">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Color}"
                                                        CornerRadius="4"
                                                        Padding="10,4"
                                                        Margin="4,0,0,0"
                                                        Cursor="Hand"
                                                        Tag="{Binding}"
                                                        MouseLeftButtonDown="TagChip_Click">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- Mods List -->
                        <ScrollViewer Grid.Row="3" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="8">
                            <ItemsControl x:Name="InstalledModsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#12ffffff"
                                                CornerRadius="8"
                                                Padding="10"
                                                Margin="0,0,0,6"
                                                Cursor="Hand"
                                                Tag="{Binding}"
                                                MouseRightButtonDown="InstalledMod_RightClick">
                                            <Border.ContextMenu>
                                                <ContextMenu Style="{StaticResource ModernContextMenu}"
                                                             Opened="ModContextMenu_Opened">
                                                    <!-- Add Tag submenu - populated dynamically -->
                                                    <MenuItem x:Name="AddTagMenuItem"
                                                              Header="Add Tag"
                                                              Style="{StaticResource ModernMenuItem}"
                                                              Tag="{Binding}">
                                                        <MenuItem.Icon>
                                                            <TextBlock Text="ðŸ·" FontSize="12"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    
                                                    <!-- Remove Tag submenu - populated dynamically -->
                                                    <MenuItem x:Name="RemoveTagMenuItem"
                                                              Header="Remove Tag"
                                                              Style="{StaticResource ModernMenuItem}"
                                                              Tag="{Binding}">
                                                        <MenuItem.Icon>
                                                            <TextBlock Text="âœ•" FontSize="10"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    
                                                    <Separator Background="{StaticResource BorderBrush}" Margin="4,4"/>
                                                    
                                                    <!-- Create New Tag -->
                                                    <MenuItem Header="Create New Tag..."
                                                              Style="{StaticResource ModernMenuItem}"
                                                              Tag="{Binding}"
                                                              Click="CreateNewTag_Click">
                                                        <MenuItem.Icon>
                                                            <TextBlock Text="+" FontSize="14" FontWeight="Bold"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Checkbox for selection -->
                                                <CheckBox Grid.Column="0"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,8,0"
                                                          Visibility="Collapsed"
                                                          Tag="{Binding}"
                                                          Checked="ModCheckBox_Changed"
                                                          Unchecked="ModCheckBox_Changed"/>
                                                
                                                <!-- Icon -->
                                                <Border Grid.Column="1"
                                                        Width="36" Height="36"
                                                        CornerRadius="6"
                                                        Background="#1a1a1a"
                                                        Margin="0,0,10,0"
                                                        ClipToBounds="True">
                                                    <Image Stretch="UniformToFill"
                                                           Tag="{Binding IconUrl}"
                                                           Loaded="ModIcon_Loaded"/>
                                                </Border>
                                                
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DisplayName}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock FontSize="10"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               Margin="0,3,0,0">
                                                        <Run Text="v"/>
                                                        <Run Text="{Binding DisplayVersion, Mode=OneWay}"/>
                                                        <Run Text=" â€¢ "/>
                                                        <Run Text="{Binding DisplayAuthor, Mode=OneWay}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="3"
                                                        Content="â¬†"
                                                        Width="24" Height="24"
                                                        Style="{StaticResource ModernButton}"
                                                        Background="{StaticResource AccentBrush}"
                                                        Padding="0"
                                                        FontSize="10"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,6,0"
                                                        Visibility="{Binding HasUpdate, Mode=OneWay, Converter={StaticResource BoolToVisibility}}"
                                                        Tag="{Binding}"
                                                        Click="UpdateMod_Click"/>
                                                
                                                <Button Grid.Column="4"
                                                        Content="âœ•"
                                                        Width="24" Height="24"
                                                        Style="{StaticResource ModernButton}"
                                                        Background="#cc3333"
                                                        Padding="0"
                                                        FontSize="10"
                                                        VerticalAlignment="Center"
                                                        Tag="{Binding}"
                                                        Click="DeleteMod_Click"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Right: Browse CurseForge -->
                <Border Grid.Column="1" 
                        Background="{StaticResource CardBackgroundBrush}"
                        CornerRadius="10"
                        Margin="8,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Search, Filters and Sort -->
                        <Border Grid.Row="0" 
                                Background="#10ffffff" 
                                CornerRadius="10,10,0,0"
                                Padding="12,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Row 1: Title and Search -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock x:Name="BrowseTitle"
                                               Grid.Column="0"
                                               Text="CURSEFORGE"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"/>
                                    
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="SearchBox"
                                                 Style="{StaticResource ModernTextBox}"
                                                 Height="30"
                                                 FontSize="11"
                                                 KeyDown="SearchBox_KeyDown"/>
                                        <Button Grid.Column="1"
                                                Content="ðŸ”"
                                                Width="30" Height="30"
                                                Margin="6,0,0,0"
                                                Style="{StaticResource ModernButton}"
                                                Padding="0"
                                                FontSize="11"
                                                Click="Search_Click"/>
                                    </Grid>
                                </Grid>
                                
                                <!-- Row 2: Filters and Sort -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                                    <!-- Category Filter -->
                                    <ComboBox x:Name="CategoryFilter"
                                              Style="{StaticResource ModernComboBox}"
                                              Width="110"
                                              Height="28"
                                              Padding="8,4"
                                              FontSize="10"
                                              SelectionChanged="CategoryFilter_SelectionChanged">
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ModernComboBoxItem}">
                                                <Setter Property="Padding" Value="8,6"/>
                                                <Setter Property="FontSize" Value="10"/>
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                    
                                    <!-- Game Version Filter -->
                                    <ComboBox x:Name="GameVersionFilter"
                                              Style="{StaticResource ModernComboBox}"
                                              Width="100"
                                              Height="28"
                                              Padding="8,4"
                                              FontSize="10"
                                              Margin="6,0,0,0"
                                              SelectionChanged="GameVersionFilter_SelectionChanged">
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ModernComboBoxItem}">
                                                <Setter Property="Padding" Value="8,6"/>
                                                <Setter Property="FontSize" Value="10"/>
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                    
                                    <!-- Clear Filters Button -->
                                    <Button x:Name="ClearFiltersBtn"
                                            Content="âœ•"
                                            Width="28" Height="28"
                                            Margin="6,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Background="#3d444d"
                                            Padding="0"
                                            FontSize="10"
                                            ToolTip="Clear Filters"
                                            Click="ClearFilters_Click"/>
                                    
                                    <!-- Separator -->
                                    <Border Width="1" Height="20" Background="#3d444d" Margin="10,0"/>
                                    
                                    <!-- Sort Dropdown -->
                                    <ComboBox x:Name="SortDropdown"
                                              Style="{StaticResource ModernComboBox}"
                                              Width="120"
                                              Height="28"
                                              Padding="8,4"
                                              FontSize="10"
                                              SelectionChanged="SortDropdown_SelectionChanged">
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ModernComboBoxItem}">
                                                <Setter Property="Padding" Value="8,6"/>
                                                <Setter Property="FontSize" Value="10"/>
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Mods Grid -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="8">
                            <ItemsControl x:Name="SearchResultsList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#12ffffff"
                                                CornerRadius="10"
                                                Width="270"
                                                Margin="4"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Mod Info -->
                                                <Grid Grid.Row="0" Margin="12,10,12,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="48"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Icon -->
                                                    <Border Grid.Column="0"
                                                            Width="44" Height="44"
                                                            CornerRadius="8"
                                                            Background="#1a1a1a"
                                                            Margin="0,0,10,0"
                                                            ClipToBounds="True">
                                                        <Image x:Name="ModIcon"
                                                               Stretch="UniformToFill"
                                                               Tag="{Binding ThumbnailUrl}"
                                                               Loaded="ModIcon_Loaded"/>
                                                    </Border>
                                                    
                                                    <!-- Name & Author -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontSize="12"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{StaticResource TextBrush}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   MaxWidth="140"/>
                                                        <TextBlock Text="{Binding AuthorName, Mode=OneWay}"
                                                                   FontSize="10"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Download Button -->
                                                    <Button Grid.Column="2"
                                                            Content="â¬‡"
                                                            Width="32" Height="32"
                                                            Style="{StaticResource ModernButton}"
                                                            Padding="0"
                                                            FontSize="14"
                                                            VerticalAlignment="Center"
                                                            Tag="{Binding}"
                                                            Click="InstallMod_Click"/>
                                                </Grid>
                                                
                                                <!-- Description -->
                                                <Border Grid.Row="1" 
                                                        Background="#08ffffff"
                                                        CornerRadius="0,0,10,10"
                                                        Padding="12,8">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Row="0"
                                                                   Text="{Binding Summary}"
                                                                   FontSize="10"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   TextWrapping="Wrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   MaxHeight="34"
                                                                   LineHeight="17"/>
                                                        <TextBlock Grid.Row="1"
                                                                   FontSize="9"
                                                                   Foreground="{StaticResource AccentBrush}"
                                                                   Margin="0,6,0,0">
                                                            <Run Text="ðŸ“¥"/>
                                                            <Run Text="{Binding DownloadCountFormatted, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Pagination -->
                        <Border Grid.Row="2" 
                                Background="#10ffffff" 
                                CornerRadius="0,0,10,10"
                                Padding="12,8">
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button x:Name="PrevPageBtn"
                                            Content="â—€"
                                            Width="32" Height="28"
                                            Style="{StaticResource ModernButton}"
                                            Background="{StaticResource CardBackgroundBrush}"
                                            Padding="0"
                                            FontSize="10"
                                            IsEnabled="False"
                                            Click="PrevPage_Click"/>
                                    <TextBlock x:Name="PageText"
                                               Text="Page 1"
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="15,0"/>
                                    <Button x:Name="NextPageBtn"
                                            Content="â–¶"
                                            Width="32" Height="28"
                                            Style="{StaticResource ModernButton}"
                                            Background="{StaticResource CardBackgroundBrush}"
                                            Padding="0"
                                            FontSize="10"
                                            Click="NextPage_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="#08ffffff"
                    CornerRadius="0,0,12,12"
                    Padding="15,0">
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText"
                                   Text="Ready"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <ProgressBar x:Name="ProgressBar"
                                     Style="{StaticResource ModernProgressBar}"
                                     Value="0"
                                     Maximum="100"
                                     Visibility="Collapsed"
                                     Width="200"
                                     Margin="15,0,0,0"
                                     VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock x:Name="ModsCountText"
                               Grid.Column="1"
                               Text="0 mods"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
