<Window x:Class="HyTaLauncher.EditModpackDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Modpack"
        Height="500" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource BackgroundGradient}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#08ffffff"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="✏" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TitleText"
                                   Text="Edit Modpack" 
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="✕" 
                            Style="{StaticResource CloseButton}"
                            HorizontalAlignment="Right"
                            Click="CancelButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="20,15">
                <StackPanel>
                    <!-- Modpack Name -->
                    <TextBlock x:Name="NameLabel"
                               Text="Modpack Name"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="ModpackNameBox"
                             Style="{StaticResource ModernTextBox}"
                             Height="36"
                             FontSize="12"
                             MaxLength="50"/>
                    <TextBlock x:Name="NameErrorText"
                               Text=""
                               FontSize="10"
                               Foreground="#cc3333"
                               Margin="0,4,0,0"
                               Visibility="Collapsed"/>
                    
                    <!-- Current Mods in Modpack -->
                    <TextBlock x:Name="CurrentModsLabel"
                               Text="Mods in Modpack"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,20,0,6"/>
                    
                    <Border Background="#12ffffff"
                            CornerRadius="8"
                            Padding="8"
                            MaxHeight="150">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="CurrentModsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#08ffffff"
                                                CornerRadius="6"
                                                Padding="10,8"
                                                Margin="0,0,0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding DisplayName}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"/>
                                                
                                                <Button Grid.Column="1"
                                                        Content="✕"
                                                        Width="22" Height="22"
                                                        Style="{StaticResource ModernButton}"
                                                        Background="#cc3333"
                                                        Padding="0"
                                                        FontSize="9"
                                                        Tag="{Binding}"
                                                        Click="RemoveModFromModpack_Click"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Add Mods Section -->
                    <TextBlock x:Name="AddModsLabel"
                               Text="Add Mods from Default"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,20,0,6"/>
                    
                    <Border Background="#12ffffff"
                            CornerRadius="8"
                            Padding="8"
                            MaxHeight="150">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="AvailableModsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#08ffffff"
                                                CornerRadius="6"
                                                Padding="10,8"
                                                Margin="0,0,0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding DisplayName}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"/>
                                                
                                                <Button Grid.Column="1"
                                                        Content="+"
                                                        Width="22" Height="22"
                                                        Style="{StaticResource ModernButton}"
                                                        Padding="0"
                                                        FontSize="12"
                                                        FontWeight="Bold"
                                                        Tag="{Binding}"
                                                        Click="AddModToModpack_Click"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2"
                    Background="#08ffffff"
                    CornerRadius="0,0,12,12"
                    Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelBtn"
                            Content="Cancel"
                            Style="{StaticResource ModernButton}"
                            Background="#3d444d"
                            Padding="20,10"
                            FontSize="12"
                            Click="CancelButton_Click"/>
                    <Button x:Name="SaveBtn"
                            Content="Save"
                            Style="{StaticResource ModernButton}"
                            Padding="20,10"
                            FontSize="12"
                            Margin="10,0,0,0"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
