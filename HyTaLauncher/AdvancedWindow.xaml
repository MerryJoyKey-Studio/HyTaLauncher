<Window x:Class="HyTaLauncher.AdvancedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Settings"
        Height="520" Width="580"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource BackgroundGradient}"
            CornerRadius="10"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#08ffffff"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock x:Name="TitleText"
                               Text="ðŸ”§ Advanced Settings" 
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                    <Button Content="âœ•" 
                            Style="{StaticResource CloseButton}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="16,12">
                <StackPanel>
                    
                    <!-- Game Launch Arguments -->
                    <TextBlock x:Name="GameArgsLabel"
                               Text="GAME LAUNCH ARGUMENTS"
                               FontSize="9"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="GameArgsTextBox"
                             Style="{StaticResource ModernTextBox}"
                             FontSize="10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="50"
                             VerticalScrollBarVisibility="Auto"/>
                    <TextBlock x:Name="GameArgsHintText"
                               Text="Variables: {app-dir}, {java-exec}, {user-dir}, {uuid}, {name}"
                               FontSize="8"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,3,0,4"/>
                    <Button x:Name="ResetGameArgsBtn"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource CardBackgroundBrush}"
                            Padding="8,5"
                            FontSize="9"
                            Click="ResetGameArgsButton_Click"
                            HorizontalAlignment="Left">
                        <TextBlock x:Name="ResetGameArgsBtnText" Text="â†© Reset to default"/>
                    </Button>
                    
                    <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,12"/>

                    <!-- Server Launch Arguments -->
                    <TextBlock x:Name="ServerArgsLabel"
                               Text="SERVER LAUNCH ARGUMENTS"
                               FontSize="9"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="ServerArgsTextBox"
                             Style="{StaticResource ModernTextBox}"
                             FontSize="10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             VerticalScrollBarVisibility="Auto"/>
                    <TextBlock x:Name="ServerArgsHintText"
                               Text="Modifies start-server.bat content"
                               FontSize="8"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,3,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="ResetServerArgsBtn"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource CardBackgroundBrush}"
                                Padding="8,5"
                                FontSize="9"
                                Click="ResetServerArgsButton_Click">
                            <TextBlock x:Name="ResetServerArgsBtnText" Text="â†© Reset to default"/>
                        </Button>
                        <Button x:Name="SaveServerArgsBtn"
                                Style="{StaticResource ModernButton}"
                                Padding="8,5"
                                FontSize="9"
                                Margin="6,0,0,0"
                                Click="SaveServerArgsButton_Click">
                            <TextBlock x:Name="SaveServerArgsBtnText" Text="ðŸ’¾ Save to file"/>
                        </Button>
                    </StackPanel>

                    <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,12"/>

                    <!-- Open Folders -->
                    <TextBlock x:Name="FoldersLabel"
                               Text="OPEN FOLDERS"
                               FontSize="9"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    
                    <WrapPanel>
                        <Button x:Name="OpenGameFolderBtn"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource CardBackgroundBrush}"
                                Padding="10,6"
                                FontSize="10"
                                Margin="0,0,6,6"
                                Click="OpenGameFolderButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ®" Margin="0,0,4,0"/>
                                <TextBlock x:Name="OpenGameFolderBtnText" Text="Game"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="OpenServerFolderBtn"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource CardBackgroundBrush}"
                                Padding="10,6"
                                FontSize="10"
                                Margin="0,0,6,6"
                                Click="OpenServerFolderButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ–¥" Margin="0,0,4,0"/>
                                <TextBlock x:Name="OpenServerFolderBtnText" Text="Server"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="OpenUserDataFolderBtn"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource CardBackgroundBrush}"
                                Padding="10,6"
                                FontSize="10"
                                Margin="0,0,6,6"
                                Click="OpenUserDataFolderButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‘¤" Margin="0,0,4,0"/>
                                <TextBlock x:Name="OpenUserDataFolderBtnText" Text="UserData"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="OpenModsFolderBtn"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource CardBackgroundBrush}"
                                Padding="10,6"
                                FontSize="10"
                                Margin="0,0,6,6"
                                Click="OpenModsFolderButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¦" Margin="0,0,4,0"/>
                                <TextBlock x:Name="OpenModsFolderBtnText" Text="Mods"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="16,0">
                <Button x:Name="CancelBtn"
                        Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource CardBackgroundBrush}"
                        Padding="10,0"
                        FontSize="11"
                        Margin="0,0,6,6"
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveBtn"
                        Content="Save"
                        Style="{StaticResource ModernButton}"
                        Padding="10,0"
                        FontSize="11"
                        Margin="0,0,0,6"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
